<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:id="@+id/cardView"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardElevation="3dp"
    app:cardCornerRadius="@dimen/spacing_5dp">

    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_lock"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_5dp"
            android:layout_gravity="center"
            />
        <LinearLayout
            android:id="@+id/ll_free_test"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_lock"
            android:layout_toLeftOf="@+id/ll_free_test_button"
            android:layout_marginLeft="@dimen/spacing_5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/freeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test name"
                android:textAllCaps="true"
                android:textColor="@color/md_black_1000"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:layout_marginTop="@dimen/spacing_5dp"
                android:id="@+id/freeText_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/text_size_12"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_marginRight="@dimen/spacing_5dp"
            android:id="@+id/ll_free_test_button"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/spacing_5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/btn_start_quiz"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:padding="@dimen/margin_10"
                android:layout_height="@dimen/spacing_40dp"
                android:text="Start Test"
                android:layout_centerVertical="true"
                android:textAllCaps="false"
                android:textSize="@dimen/text_size_14"
                android:visibility="visible"
                android:textColor="@color/white"
                android:background="@color/colorAccent"/>

        </LinearLayout>
    </RelativeLayout>


</android.support.v7.widget.CardView>
