<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_ans"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardCornerRadius="1dp"
    app:cardElevation="1dp"
    android:layout_margin="@dimen/spacing_2dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/rl_ans"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_ans_no"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_14"
            android:padding="@dimen/spacing_15dp"
            android:layout_gravity="center"
            android:textColor="@color/md_black_1000"
            android:text="(A)"/>

        <WebView
            android:layout_marginLeft="@dimen/spacing_5dp"
            android:layout_toRightOf="@+id/tv_ans_no"
            android:id="@+id/ans_body"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/spacing_5dp"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none" />

    </LinearLayout>
</android.support.v7.widget.CardView>
